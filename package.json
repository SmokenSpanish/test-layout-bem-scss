{
  "name": "test-layout-bem-scss",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel watch:sass serve",
    "watch:sass": "sass --watch src/scss/main.scss:src/public/main.css --style=expanded",
    "build": "sass src/scss/main.scss:dist/main.css --no-source-map --style=compressed",
    "copy:index": "copy src\\index.html dist\\index.html",
    "copy:images": "xcopy src\\public\\images dist\\images /E /I /Y",
    "copy:js": "copy src\\js\\main.js dist\\main.js",
    "predeploy": "npm run build && npm run copy:index && npm run copy:images && npm run copy:js",
    "deploy": "gh-pages -d dist --repo https://github.com/SmokenSpanish/test-layout-bem-scss.git"
  },
  "devDependencies": {
    "gh-pages": "^6.3.0",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.77.0"
  }
}
