{
  "name": "test-layout-bem-scss",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel watch:sass serve",
    "build": "sass src/scss/main.scss:src/public/main.css --no-source-map --style=compressed",
    "watch:sass": "sass --watch src/scss/main.scss:src/public/main.css --style=expanded",
    "serve": "http-server src -p 5173",
    "predeploy": "cp -r src/* dist/",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "gh-pages": "^6.3.0",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.77.0"
  }
}
